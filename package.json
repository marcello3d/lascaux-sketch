{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test-ci": "wsrun --serial test-ci",
    "build-all": "wsrun --serial build",
    "watch-all": "wsrun --parallel watch",
    "postinstall": "patch-package",
    "lint": "eslint packages/*/src/**/*.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "engines": {
    "node": ">=14"
  },
  "dependencies": {},
  "peerDependencies": {},
  "devDependencies": {
    "husky": "4.3.0",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.0",
    "wsrun": "5.2.4"
  }
}
